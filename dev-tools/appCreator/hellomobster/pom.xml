<project>
	<modelVersion>4.0.0</modelVersion>

	<!-- User Provided -->
	<groupId>org.hello.mobster</groupId>
	<name>hellomobster</name>
	<artifactId>hellomobster</artifactId>
	<version>2.0-snapshot</version>
	<url>http://www.hellomobster.org</url>

	<packaging>pom</packaging>

	<modules>
		<module>cloud</module>
		<module>moblet-rimos</module>
	</modules>


	<!-- User Provided  -->
	<properties>
		<openmobster.version>2.0-snapshot</openmobster.version>
	</properties>

	<dependencyManagement>
		<dependencies>
			<dependency>
				<groupId>org.openmobster.core.mobileCloud.rimos
				</groupId>
				<artifactId>device-sdk</artifactId>
				<version>${openmobster.version}</version>
			</dependency>
			<dependency>
				<groupId>org.openmobster.core.mobileCloud.rimos
				</groupId>
				<artifactId>device-sdk</artifactId>
				<version>${openmobster.version}</version>
				<classifier>full</classifier>
			</dependency>
			<dependency>
				<groupId>org.openmobster.core.mobileCloud.rimos
				</groupId>
				<artifactId>mobileCloud</artifactId>
				<version>${openmobster.version}</version>
				<classifier>bin</classifier>
			</dependency>
			<dependency>
				<groupId>org.openmobster.core</groupId>
				<artifactId>cloud-sdk</artifactId>
				<version>${openmobster.version}</version>
			</dependency>
			<dependency>
				<groupId>org.openmobster.core.dev.tools
				</groupId>
				<artifactId>dev-cloudServer
				</artifactId>
				<version>${openmobster.version}</version>
			</dependency>
			<dependency>
				<groupId>org.openmobster.core.dev.tools
				</groupId>
				<artifactId>rimos-devcloud
				</artifactId>
				<version>${openmobster.version}</version>
			</dependency>

			<dependency>
				<groupId>org.openmobster.core</groupId>
				<artifactId>device-agent-simulator
				</artifactId>
				<version>${openmobster.version}</version>
				<scope>test</scope>
			</dependency>
		</dependencies>
	</dependencyManagement>

	<dependencies>
		<dependency>
			<groupId>org.openmobster.core.dev.tools
			</groupId>
			<artifactId>dev-cloudServer
				</artifactId>
		</dependency>

		<dependency>
			<groupId>org.openmobster.core</groupId>
			<artifactId>device-agent-simulator
				</artifactId>
			<scope>test</scope>
		</dependency>
	</dependencies>

	<repositories>
		<repository>
			<id>openmobster-maven</id>
			<url>http://openmobster.googlecode.com/svn/maven2
			</url>
		</repository>

		<!-- JBoss maven2 repository -->
		<repository>
			<id>jboss</id>
